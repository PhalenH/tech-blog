<article data-id="{{id}}" class="update-container">
  <div class="blog-post">
    <h2>Edit Post</h2>
    <div class="card-body">
      <form class="update-post-form">
        <div class="input-spacing">
          <label for="input-title">Title</label>
          <input
            type="text"
            class="form-control"
            id="input-title"
            value="{{title}}"
          />
        </div>
        <div class="input-spacing">
          <label for="post-content">Content</label>
          <textarea id="post-content" rows="3" name="post-content"> {{post_content}}</textarea>
        </div>
        <div class="input-spacing">
          <button type="submit" class="submit-button" id="update-post-btn">Update Post</button>
        </div>
        <div class="input-spacing">
          <button type="submit" class="submit-button" id="delete-post-btn">Delete Post</button>
        </div>
      </form>
    </div>
  </div>
</article>

<script src="/js/update-post.js"></script>